{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended"
	],
	"overrides": [
		{
			"files": ["test/**/*.js"],
			"env": {
				"mocha": true
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": 2019
	},
	"plugins": [],
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": ["error", {
			"allowIndentationTabs": true
		}],
		"require-jsdoc": "off",
		"valid-jsdoc": "off"
	}
}
